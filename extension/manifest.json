{
  "manifest_version": 3,
  "name": "clawd vault",
  "version": "1.1.0",
  "description": "save links to clawd's memory",
  "permissions": ["contextMenus", "activeTab", "storage", "scripting"],
  "host_permissions": ["http://100.119.198.102:9877/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "save-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "save current tab to clawd vault"
    }
  },
  "web_accessible_resources": [{
    "resources": ["overlay.js", "vault-panel.js", "popup.html", "popup.js", "popup.css"],
    "matches": ["<all_urls>"]
  }]
}
